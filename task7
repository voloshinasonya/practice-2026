n = int(input("введіть кількість студентів у групі: "))

for i in range(n):
print(f"\n студент {i + 1}:")
name = input("ім'я: ")
surname = input("прізвище: ")
    
grades = []
for j in range(5):
grade = float(input(f"оцінка за дисципліну {j + 1}: "))
grades.append(grade)
    
students.append({
"name": name,
"surname": surname,
"grades": grades})

print("\n таблиця середніх балів студентів:")
print("ім'я | прізвище | середній бал")

for student in students:
avg_student = sum(student["grades"]) / 5
print(f"{student['name']} | {student['surname']} | {avg_student:.2f}")

discipline_averages = []

for i in range(5):
total = sum(student["grades"][i] for student in students)
discipline_averages.append(total / n)

print("\n середній бал групи з кожної дисципліни:")
for i, avg in enumerate(discipline_averages, start=1):
print(f"дисципліна {i}: {avg:.2f}")
