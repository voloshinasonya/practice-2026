import tkinter as tk
from tkinter import colorchooser, filedialog

class GraphicsApp:
def __init__(self, root):
self.root = root
self.root.title("графіка")
self.root.geometry("700x500")

self.color = "black"
self.draw_mode = "line"
self.start_x = None
self.start_y = None

control_frame = tk.Frame(root)
control_frame.pack(side=tk.TOP, fill=tk.X, pady=5)

tk.Button(control_frame, text="лінія", command=lambda: self.set_mode("line")).pack(side=tk.LEFT, padx=5)
tk.Button(control_frame, text="коло", command=lambda: self.set_mode("circle")).pack(side=tk.LEFT, padx=5)
tk.Button(control_frame, text="вибрати колір", command=self.choose_color).pack(side=tk.LEFT, padx=5)
tk.Button(control_frame, text="очистити", command=self.clear_canvas).pack(side=tk.LEFT, padx=5)
tk.Button(control_frame, text="зберегти", command=self.save_canvas).pack(side=tk.LEFT, padx=5)

self.canvas = tk.Canvas(root, width=600, height=400, bg="white")
self.canvas.pack(pady=10)

self.canvas.bind("<Button-1>", self.on_click)
self.canvas.bind("<B1-Motion>", self.on_drag)
self.canvas.bind("<ButtonRelease-1>", self.on_release)

self.current_item = None

def set_mode(self, mode):
self.draw_mode = mode

def choose_color(self):
color = colorchooser.askcolor()[1]
if color:
self.color = color

def clear_canvas(self):
self.canvas.delete("all")

def save_canvas(self):
file = filedialog.asksaveasfilename(defaultextension=".ps"
filetypes=[("PostScript files", "*.ps"), ("All files", "*.*")])

if file:
self.canvas.postscript(file=file)
tk.messagebox.showinfo("збережено", f"полотно збережено у файл {file}")

def on_click(self, event):
self.start_x = event.x
self.start_y = event.y
if self.draw_mode == "line":
self.current_item = self.canvas.create_line(self.start_x, self.start_y, event.x, event.y, fill=self.color)
elif self.draw_mode == "circle":
self.current_item = self.canvas.create_oval(self.start_x, self.start_y, event.x, event.y, outline=self.color)

def on_drag(self, event):
if self.current_item:
if self.draw_mode == "line":
self.canvas.coords(self.current_item, self.start_x, self.start_y, event.x, event.y)
elif self.draw_mode == "circle":
self.canvas.coords(self.current_item, self.start_x, self.start_y, event.x, event.y)

def on_release(self, event):
self.current_item = None

if name == "main":
root = tk.Tk()
аpp = GraphicsApp(root)
root.mainloop()
