import tkinter as tk

def greet():
label.config(text="Вітаю, користувач!")

def clear_text():
label.config(text="")

def exit_program():
root.destroy()

root = tk.Tk()
root.title("Програма з кнопками")
root.geometry("400x200")

label = tk.Label(root, text="", font=("Arial", 16))
label.pack(pady=20)

greet_button = tk.Button(root, text="Привітати", command=greet, width=15)
greet_button.pack(pady=5)

clear_button = tk.Button(root, text="Очистити", command=clear_text, width=15)
clear_button.pack(pady=5)

exit_button = tk.Button(root, text="Вийти", command=exit_program, width=15)
exit_button.pack(pady=5)

root.mainloop()
