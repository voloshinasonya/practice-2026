# logic.py

def square_number(x):
"Повертає квадрат числа"
try:
num = float(x)
return num ** 2
except ValueError:
return "помилка: введіть число"

# ui.py
import tkinter as tk

class MainWindow:
def __init__(self, root, calculate_callback):
self.root = root
self.root.title("квадрат числа")
self.root.geometry("300x200")

self.calculate_callback = calculate_callback

tk.Label(root, text="введіть число:").pack(pady=10)
self.entry = tk.Entry(root)
self.entry.pack(pady=5)

tk.Button(root, text="обчислити квадрат", command=self.calculate).pack(pady=10)

self.result_label = tk.Label(root, text="", fg="blue")
self.result_label.pack(pady=10)

ef calculate(self):
value = self.entry.get()
result = self.calculate_callback(value)

# main.py
import tkinter as tk
from ui import MainWindow
from logic import square_number

def main():
root = tk.Tk()
app = MainWindow(root,square_number)
root.mainloop()

if name == "main":
main()


        self.result_label.config(text=f"Результат: {result}")
