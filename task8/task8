df = read_csv("students.csv")

df["avg_student"] = df[["grade1", "grade2", "grade3"]].mean(axis=1)

print("таблиця середніх балів студентів:")
print(df[["name", "surname", "avg_student"]])

discipline_avg = df[["grade1", "grade2", "grade3"]].mean()

print("\nсередній бал по кожному предмету:")
print(discipline_avg)
