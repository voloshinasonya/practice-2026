class BankAccount:
    def __init__(self, balance=0):
        self.balance = balance 

    @property
    def balance(self):
        return self.__balance

    @balance.setter
    def balance(self, value):
        if value < 0:
            print("Помилка: баланс не може бути від’ємним")
        else:
            self.__balance = value

    def deposit(self, amount):
        if amount > 0:
            self.balance += amount

    def withdraw(self, amount):
        if 0 < amount <= self.balance:
            self.balance -= amount

account = BankAccount(1000)
account.deposit(500)
account.withdraw(300)

account.balance = -200

print("Баланс:", account.balance)

class Car:
    def __init__(self, brand, year, mileage=0):
        self.brand = brand
        self.year = year
        self.mileage = mileage 

    @property
    def mileage(self):
        return self.__mileage

    @mileage.setter
    def mileage(self, value):
        if value < 0:
            print("Помилка: пробіг не може бути від’ємним")
        else:
            self.__mileage = value

    def drive(self, km):
        if km > 0:
            self.mileage += km

    def __str__(self):
        return f"{self.brand} ({self.year}), пробіг: {self.mileage} км"

car = Car("Toyota", 2019, 50000)
car.drive(150)

car.mileage = -100 

print(car)
