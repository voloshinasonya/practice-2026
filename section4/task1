import requests

print("--- GET REQUEST ---")
get_response = requests.get('https://jsonplaceholder.typicode.com')

print(f"Status Code: {get_response.status_code}")
print(f"Headers: {get_response.headers['Content-Type']}")
print(f"Body: {get_response.json()}\n")

print("--- POST REQUEST ---")
payload = {
    'title': 'Привіт',
    'body': 'Це тіло повідомлення',
    'userId': 1
}
post_response = requests.post('https://jsonplaceholder.typicode.com', json=payload)

print(f"Status Code: {post_response.status_code}")
print(f"Response Body: {post_response.json()}")
